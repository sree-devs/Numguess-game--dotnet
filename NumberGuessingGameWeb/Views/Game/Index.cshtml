 @{
    ViewData["Title"] = "Number Guessing Game";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Link to the external CSS file -->
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <p>Guess the number between 1 and 100:</p>

    <form method="post" action="/Game/Guess">
        <label for="userGuess">Enter your guess:</label>
        <input type="number" id="userGuess" name="userGuess" min="1" max="100" required />
        <button type="submit">Guess</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div>
            <p>@ViewBag.Message</p>
        </div>
    }

    <form method="post" action="/Game/Reset">
        <button type="submit">Reset Game</button>
    </form>
</body>
</html>
